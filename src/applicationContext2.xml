<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

	<!-- Creación de la dependencia -->
	<bean id="miInforme" class="es.softord.IoC.Informe">
	
	</bean>
		
	<!-- Creación de la dependencia con SETTER quitas set y la primera letra en minuscula para property-->
	<bean id="miSecretarioEmpleado" class="es.softord.IoC.SecretarioEmpleado" scope="prototype">
		<property name="informeNuevo" ref="miInforme"></property>		
		
	</bean>


</beans>